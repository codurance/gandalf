extends ../../layout/default

block content

    div(ng-app="app-proposals")

        div(class="o-page-header")
            h3= title

        div(class="navbar-collapse collapse")
            ul(class="nav navbar-nav")
                li
                    a(href="/proposals/new") new proposal

        div(ng-controller="ProposalsController as proposals")

            div(class="table-fixed-height")
                div(class="table-header")
                    span(class="table-cell") Project Name
                    span(class="table-cell") Client
                    span(class="table-cell") Last Updated
                    span(class="table-cell") People Involved
                div(ng-repeat="proposal in proposals.all", class="table-row")
                    div(class="table-cell")
                        a(href="/proposals/proposal/{{proposal.id}}") {{proposal.projectName}}
                    div(class="table-cell") {{proposal.client}}
                    div(class="table-cell") {{proposal.lastUpdated}}
                    div(class="table-cell")
                        div(ng-repeat="person in proposal.peopleInvolved")
                            span {{person}}