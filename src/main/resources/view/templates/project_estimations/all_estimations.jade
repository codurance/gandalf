extends ../../layout/default

block content

    div(ng-app="app-estimations")

        div(class="navbar-collapse collapse")
            ul(class="nav navbar-nav")
                li
                    a(href="/new-project-estimation") new project estimation

        div(ng-controller="EstimationsController as estimations")

            div(class="table-fixed-height")
                div(class="table-header")
                    span(class="table-cell") Client
                    span(class="table-cell") Project Name
                    span(class="table-cell") Last Updated
                    span(class="table-cell") People Involved
                div(ng-repeat="estimation in estimations.all", class="table-row")
                    div(class="table-cell") {{estimation.client}}
                    div(class="table-cell") {{estimation.projectName}}
                    div(class="table-cell") {{estimation.lastUpdated}}
                    div(class="table-cell")
                        div(ng-repeat="person in estimation.peopleInvolved")
                            span {{person}}